<!-- BEGIN | Header -->
<%- include('partials/_navigationrl') -%>
<!-- END | Header -->

<div class="hero common-hero1">
    <div class="container">
		<div class="row">
			<div class="col-md-12">
				<div class="hero-ct">
					<h1> EDIT MOVIE </h1>
                    <br><br>
				</div>
			</div>
		</div>
	</div>
</div>

<div class="page-single-r row">
    <div class="col-md-4 col-xs-1"></div>
    <form method="POST" action="/movies/edit/<%= movie.id %>" class="col-xs-10 col-md-4 addstarform">
        <div class="row">
             <label for="title">
                Movie Title*
                <input type="text" value="<%= movie.title %>" name="title" id="title" placeholder="Movie Title" required="required" />
            </label>
        </div>

        <div class="row">
            <label for="description">
                Movie Description*
                <textarea name="description" id="description" placeholder="Your movie's description" cols="50" style="resize: none; height: 86px; margin-top: 8px;" ><%= movie.description %></textarea>
            </label>
        </div>

        <div class="row">
            <label for="actor">
                Actors
               <input value="<%= movie.actors %>" type="text" name="actors" id="actor" placeholder="Actors, seperated with a comma"/>
           </label>
       </div>

       <div class="row">
            <label for="photoLink">
                Poster of Movie
            <input value="<%= movie.photo %>" type="url" name="photoLink" id="photoLink" placeholder="You can give a poster url"/>
            </label>
        </div>
        <div>
            <% if(errors !== " ") { %>
                <% errors.forEach(function(item) { %>
                    <div class="alert alert-danger">
                        <%- item %>
                    </div>
                <% }) %>
            <% } %>
        </div>

        <div>
            <% if(success != "") { %>
            <div class="alert alert-success" role="alert">
                The movie is successfuly updated.
            </div>  
            <% } %>
        </div>
       <div class="row">
         <button type="submit">Update Movie</button>
       </div>
    </form>
</div>

<%- include('partials/_footer') -%>


<script src="/js/jquery.js"></script>
