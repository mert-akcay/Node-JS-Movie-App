<% ddata = 'sharestar'; %>
<%- include('partials/_confirmationModal') %>

<div class="modal modalss" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
	<div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content" >
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalCenterTitle">Are you sure?</h5>
      </div>
      <div class="modal-body">
        This action will delete this post
      </div>
      <div class="modal-footer">
        <button class="btn btn-secondary dismiss" data-dismiss="modal">Close</button>
		<form style="display: inline;" method="POST" action="/stars/delete">
			<button type="submit" class="btn btn-primary delete"> Delete </button>
			<input type="hidden" name="id" id="delete-inf">
		</form>
      </div>
    </div>
  </div>
</div>

<div class="hero user-hero">
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<div class="hero-ct">
					<h1 style="text-align: left; margin-left: 25.5%;"><%=user.firstName%> <%= user.lastName %>â€™s profile</h1>
					<ul class="breadcumb">
						<li class="active"><a href="#">Home</a></li>
						<li> <span class="ion-ios-arrow-right"></span>Favorite movies</li>
					</ul>
				</div>
			</div>
		</div>
	</div>
</div>
<div class="page-single userfav_list">
	<div class="container">
		<div class="row ipad-width2">
			<%- include('partials/_leftmenu') %>
			<div class="col-md-9 col-sm-12 col-xs-12">
				<div class="flex-wrap-movielist user-fav-list row">
					<% if(stars[0].length != 0) { %>
					<% stars[0].forEach(star => { %>
					<div class="col-md-12">
						<div class="ceb-item-style-2">
							<a href="/stars/<%= star.id %>">
								<img style="height: 250px; width: 175px;" src="<%= star.photo || '/images/uploads/defaultstar.png' %>" alt="">
							</a>
							<div class="ceb-infor">
								<h2><a href="/stars/<%= star.id %>"><%= star.firstName %> <%= star.lastName %></a></h2>
								<p><%= star.info %> </p>
								<div class="share-star-btn">
									<button class="share-btn <%= star.public == true && 'shared' %>" style="margin-top: 10px;" data-whatever="<%= star.id %>" data-toggle="modal" data-target="#exampleModal"><%= star.public == true ? 'Shared' : 'Share' %></button>
									<a href="/stars/edit/<%= star.id %>"><button class="edit-btn">Edit</button></a>
									<button class="delete-btn" data-id="<%= star.id %>" data-toggle="modal" data-target="#deleteModal">Delete</button>
								</div>
							</div>
						</div>
					</div>
					<% })}else{ %>
					<div class="col-md-12 notadd">
						<h4>You have not added any star. <a href="/stars/add">Do you want to try?</a></h4>
					</div>
					<% } %>
				</div>		
			</div>
		</div>
	</div>
</div>
